<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:background="@color/Foreground">

            <ImageView
                android:id="@+id/imgArtis"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/roma"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/txtArtis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Rhoma Irama"
                android:textSize="12dp"
                android:ellipsize="end"
                android:layout_marginLeft="3dp"
                android:layout_below="@id/imgArtis"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/txtJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16dp"
                android:layout_marginLeft="3dp"
                android:text="Zaman Pembaharuan"
                android:layout_below="@id/txtArtis"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:weightSum="9"
                android:layout_below="@id/txtJudul">
                <TextView
                    android:id="@+id/txtviewer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="10dp"
                    android:gravity="center_vertical"
                    android:text="1.000 view"
                    android:layout_weight="9"/>
            </LinearLayout>
        </RelativeLayout>
</RelativeLayout>